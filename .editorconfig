root                     = true

[*]
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
charset                  = utf-8

[{*.lua,*.tl,tl,.busted}]
indent_style             = space
indent_size              = 3

[{*.c,*.h}]
indent_style             = space
indent_size              = 4

[Makefile]
indent_style             = tab
